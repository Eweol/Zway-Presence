{
    "dependencies": [],
    "singleton": true,
    "category": "scheduling",
    "author": "Maroš Kollár",
    "homepage": "http://k-1.com",
    "icon": "icon.png",
    "version": "1.00",
    "maturity": "stable",
    "moduleName": "Presence",
    "repository": {
        "type": "git",
        "source": "https://github.com/maros/Zway-Presence"
    },
    "defaults": {
        "title": "__title__",
        "description": "__description__"
    },
    "schema": {
        "type": "object",
        "properties": {
            "night_start": {
                "type": "time",
                "default": "03/15",
                "pattern": "^(0*[1-9]|1[012])/(3[01]|[12][0-9]|0*[1-9])$"
            }
        },
        "required": true
    },
    "options": {
        "fields": {
            "night_start": {
                "type": "time",
                "maskString": "99:99",
                "timeFormat": "__timeFormat__",
                "timeFormatRegex": "/^(([0-1][0-9])|([2][0-3])):([0-5][0-9])$/"
            },
            "night_end": {
                "type": "time",
                "maskString": "99:99",
                "timeFormat": "__timeFormat__",
                "timeFormatRegex": "/^(([0-1][0-9])|([2][0-3])):([0-5][0-9])$/"
            }
        }
    }
}
